<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="primary_logo">
        <item name="android:src">@drawable/ic_logo</item>
    </style>

    <style name="primary_action_button">
        <item name="android:background">@drawable/rounded_corner_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="primary_input_text">
        <item name="android:background">@drawable/input_text_white_bg</item>
        <item name="android:textColor">@color/nevada</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="primary_title_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="primary_grey_input_Text" parent="primary_input_text">
        <item name="android:background">@drawable/input_text_grey_bg</item>
    </style>


    <style name="primary_sub_title_text" parent="primary_title_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/mine_shaft</item>
    </style>

</resources>